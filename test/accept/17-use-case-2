contract NFTFactory {

    ERC721 nftContract = 0x24862BDE3581a23552CE4EE712614550d7aE49FC;

    event NewCollections(address[] proxies);

    @public
    function deployNewCollections(uint amount) {
        address[amount] newCollections;

        for (uint i = 0; i < amount; i++) {
            // createProxyTo es una funciÃ³n built-in
            address _contract = createProxyTo(token);
            newCollections[i] = _contract;
        }

        emit NewCollections(newCollections);
    }

}